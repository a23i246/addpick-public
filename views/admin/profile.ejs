<%- include('../partials/header_admin', { title: 'プロフィール', user }) %>


<div class="container py-4">
  <h1 class="mb-3">管理者プロフィール</h1>

  <div class="card mb-4">
    <div class="card-body d-flex align-items-center gap-3">
      <% if (user.profile_image) { %>
        <img src="<%= '/uploads/' + user.profile_image %>" alt="profile" class="rounded" style="width:96px;height:96px;object-fit:cover;">
      <% } else { %>
        <div class="bg-light border rounded d-flex align-items-center justify-content-center"
             style="width:96px;height:96px;">No Image</div>
      <% } %>

      <div>
        <div><strong>名前:</strong> <%= user.name %></div>
        <div><strong>メール:</strong> <%= user.email %></div>
        <div><strong>権限:</strong> <%= user.role %></div>
        <div><strong>登録日:</strong> <%= new Date(user.created_at).toLocaleString('ja-JP') %></div>
      </div>
    </div>
  </div>

  <!-- ✅ ログアウトはこのページだけ -->
  <form method="POST" action="/logout" class="mt-3">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button type="submit" class="btn btn-danger">ログアウト</button>
  </form>
</div>

<!-- 必要ならBootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>